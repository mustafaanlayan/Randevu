@using Microsoft.AspNetCore.Identity


<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Manege/Index" title="Manage">Merhaba @User.Identity.Name! </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index","Home",new {area=""})">
                <button type="submit" class="nav-link btn-link text-dark">Çıkış Yap</button>
            </form>

        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Register">Kayıt Ol</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Login">Giriş Yap</a>

        </li>
    }
    </ul>