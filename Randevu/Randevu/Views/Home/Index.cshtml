@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha256-eZrrJcwDc/3uDhsdt61sL2oOBY362qM3lon1gyExkL0=" crossorigin="anonymous" />
    <link href='/lib/fullcalendar/core/main.css' rel='stylesheet'/>
    <link href='/lib/fullcalendar/daygrid/main.css' rel='stylesheet'/>
    <link href='/lib/fullcalendar/timegrid/main.css' rel='stylesheet'/>
    <link href='/lib/fullcalendar/list/main.css' rel='stylesheet'/>
    
    <link href="~/lib/fullcalendar/bootstrap/main.css"/>
    

}
<div id="calendar">
    
    </div>

    

@section Scripts
{
    <<script src='~/lib/fullcalendar/core/main.js'></script>
    <script src="/lib/fullcalendar/daygrid/main.js"></script>
    <script src="~/lib/fullcalendar/timegrid/main.js"></script>
    <script src="~/lib/fullcalendar/list/main.js"></script>
    <script src="~/lib/fullcalendar/interaction/main.js"></script>
    <script src="~/lib/fullcalendar/bootstrap/main.js"></script>
    <script src="~/lib/fullcalendar/core/locales/tr.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded',
            function() {
                var calendarEl = document.getElementById('calendar');

                var calendar = new FullCalendar.Calendar(calendarEl,
                    {
                        plugins: ['interaction', 'dayGrid', 'timeGrid', 'list', 'bootstrap'],
                        themeSystem: 'bootstrap',
                        bootstrapFontAwesome: {
                            dayGridMonth: 'calendar',
                            prev: 'fa-chevron-circle-left',
                            next: 'fa-chevron-circle-right',
                            listWeek: 'fa-list'
                        },
                        locale: 'tr',
                        header: {
                            left: 'prev, next, today, addEvent',
                            center: 'title',
                            right: 'dayGridMonth, timeGridWeek, timeGridDay, timeGridForFourDay, listWeek'
                        },
                        footer: {
                            left: 'prevYear',
                            right: 'nextYear'
                        },
                        //slotDuration:'00:15:00',
                        // slotLabelInterval:'00:15:00',
                        slotLabelFormat: {
                            hour: '2-digit',
                            minute: '2-digit'
                        },
                        fixedWeekCount: true,
                        showNonCurrentDates: false,
                        //scroolTime:'08:00:00',
                        minTime: '07:00:00',
                        maxTime: '21:00:00',
                        //handleWindowResize:true,
                        //windowResizeDelay:100,
                        //windowResize:function (view) {
                        //alert('Takvim Yeniden Boyutlandırıldı.');
                        //},
                        contentHeight: 430,
                        defaultView: 'dayGridMonth',
                        weekends: true,
                        allDaySlot: false,
                        firstDay: 1,
                        titleFormat: {
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric'
                        },
                        titleRangeSeparator: '  / ',
                        columnHeaderFormat: {
                            //month: 'numeric',
                            weekday: 'long'
                            //day:'numeric'
                        },
                        views: {
                            timeGridForFourDay: {
                                type: 'timeGrid',
                                // dayCount:4,
                                duration: { days: 4 },
                                buttonText: '4 Gün'
                            },
                            customButtons: {
                                addEvent: {
                                    text:'Ekle',
                                    click:function() {
                                        var newEvent= {
                                            id:'a',
                                            title:'Yeni Event',
                                            start: '2021-12-06T15:00:00.000Z',
                                            end: '2021-12-06T15:30:00.000Z'
                                        }
                                        calendar.addEvent(newEvent);
                                    }
                                }
                            }
                            
                        },
                        timeZone: 'UTC',
                        events: [
                            {
                                id: 'x',
                                title: 'Merhaba',
                                start: '2021-12-06T08:00:00.000Z',
                                end: '2021-12-06T10:30:00.000Z'
                            },
                            {
                                id: 'y',
                                title: 'Merhaba y',
                                start: '2021-12-06T11:00:00.000Z',
                                end: '2021-12-06T12:30:00.000Z'
                            }
                        ],
                        selectable: true,
                        select: function(selectionInfo) {
                            console.log(selectionInfo);
                        }
                    });
                calendar.render();
                var events = calendar.getEvents();
                console.log(events);


                var id = 'x';
                var event = calendar.getEventById(id);
                console.log(event.title);
            });

    </script>
}


